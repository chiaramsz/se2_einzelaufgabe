<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/antwort_vom_server"
        android:layout_width="225dp"
        android:layout_height="181dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.689" />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="111dp"
        android:layout_height="65dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="275dp"
        android:onClick="sendToServer"
        android:text="ABSCHICKEN"
        app:layout_constraintBottom_toBottomOf="@+id/antwort_vom_server"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_number" />

    <TextView
        android:id="@+id/text_studentNumber"
        android:layout_width="245dp"
        android:layout_height="25dp"
        android:layout_marginStart="83dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="22dp"
        android:text="Gib deine Matrikelnummer ein"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/student_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/student_number"
        android:layout_width="307dp"
        android:layout_height="40dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.175" />

    <Button
        android:id="@+id/buttonCalc"
        android:layout_width="120dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="276dp"
        android:onClick="calculate"
        android:text="BERECHNEN"
        app:layout_constraintBottom_toBottomOf="@+id/antwort_vom_server"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/student_number" />

    <Button
        android:id="@+id/sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summe"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="314dp"
        android:onClick="calcSum"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summe"
        tools:layout_editor_absoluteX="399dp"
        tools:layout_editor_absoluteY="437dp" />


</android.support.constraint.ConstraintLayout>